<?xml version="1.0" encoding="UTF-8"?>


<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
version="3.1">

<servlet>
<servlet-name>login</servlet-name>
<servlet-class>com.oop.servlet.LoginServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>login</servlet-name>
<url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>RegistrationServlet</servlet-name>
<servlet-class>com.oop.servlet.RegistrationServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>RegistrationServlet</servlet-name>
<url-pattern>/register</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>updateCustomer</servlet-name>
<servlet-class>com.oop.servlet.UpdateCustomerServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>updateCustomer</servlet-name>
<url-pattern>/update</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>DeleteCustomer</servlet-name>
<servlet-class>com.oop.servlet.DeleteCustomerServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>DeleteCustomer</servlet-name>
<url-pattern>/delete</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>Admin login</servlet-name>
<servlet-class>com.oop.servlet.AdminLoginServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>Admin login</servlet-name>
<url-pattern>/Adminlogin</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>AdminRegistrationServlet</servlet-name>
<servlet-class>com.oop.servlet.AdminRegistrationServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>AdminRegistrationServlet</servlet-name>
<url-pattern>/Admin-register</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>updateAdmin</servlet-name>
<servlet-class>com.oop.servlet.UpdateAdminServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>updateAdmin</servlet-name>
<url-pattern>/Admin-update</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>AdminDelete</servlet-name>
<servlet-class>com.oop.servlet.DeleteAdminServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>AdminDelete</servlet-name>
<url-pattern>/Admin-delete</url-pattern>
</servlet-mapping>



<servlet>
<servlet-name>InsertPayment</servlet-name>
<servlet-class>com.oop.servlet.PaymentServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>InsertPayment</servlet-name>
<url-pattern>/Payment-register</url-pattern>
</servlet-mapping>

</web-app>
